{
  "$id": "frontmatter.schema.json",
  "type": "object",
  "required": [
    "title",
    "description",
    "audience_levels",
    "personas",
    "categories",
    "tags",
    "last_reviewed"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "audience_levels": {
      "type": "array",
      "items": {
        "enum": [
          "beginner",
          "intermediate",
          "advanced"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "personas": {
      "type": "array",
      "items": {
        "enum": [
          "non-technical",
          "PM",
          "developer",
          "data-analyst",
          "admin"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "min_read_minutes": {
      "type": "number"
    },
    "last_reviewed": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "related": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "search_keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "related_project_types": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "primary_category": {
      "type": "string",
      "minLength": 1
    },
    "show_toc": {
      "type": "boolean"
    }
  },
  "additionalProperties": true
}
